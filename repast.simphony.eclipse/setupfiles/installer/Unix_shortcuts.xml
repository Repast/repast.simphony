<izpack:shortcuts version="5.0"
                  xmlns:izpack="http://izpack.org/schema/shortcuts"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://izpack.org/schema/shortcuts http://izpack.org/schema/5.0/izpack-shortcuts-5.0.xsd">

  <skipIfNotSupported/>
  
  <programGroup defaultName="%MODEL_NAME%" location="applications"/>
  
  <shortcut
     name="%MODEL_NAME%"
     programGroup="yes"
     desktop="no"
     applications="no"
     startMenu="no"
     startup="no"
     target="$INSTALL_PATH/start_model.command"
     commandLine=""
     workingDirectory="$INSTALL_PATH"
     description="Model"
     iconFile="$INSTALL_PATH/%PROJECT_NAME%/icons/model.png"
     iconIndex="0"
     type="Application"
     encoding="UTF-8"
     terminal="true"
     KdeSubstUID="false"
     initialState="normal">
    
     <createForPack name="Model"/>
  </shortcut>

  <shortcut
     name="Documentation"
     programGroup="yes"
     desktop="yes"
     applications="no"
     startMenu="no"
     startup="no"
     target="$INSTALL_PATH/%PROJECT_NAME%/docs/index.html"
     workingDirectory="$INSTALL_PATH/docs"
     commandLine=""
     initialState="noShow"
     iconFile="help"
     iconIndex="0" 
     url="$INSTALL_PATH/%PROJECT_NAME%/docs/index.html"                                
     type="Application"
     encoding="UTF-8" 
   	 createForAll="true"  
     description="Model Documentation">
       
     <createForPack name="Documentation"/>
  </shortcut>
   
  <shortcut
     name="%MODEL_NAME% Uninstaller"
     programGroup="yes"
     desktop="no"
     applications="no"
     startMenu="no"
     startup="no"
     target="java"
     commandLine="-jar &quot;$INSTALL_PATH/Uninstaller/uninstaller.jar&quot;"
     initialState="noShow"
     iconFile="trashcan_full"
     iconIndex="0" 
     workingDirectory="$INSTALL_PATH/Uninstaller"
     type="Application"
     encoding="UTF-8"
     KdeSubstUID="true"
     KdeUsername="root"
     createForAll="false"
	 categories="Development;IDE" 
	 tryexec="java -jar &quot;$INSTALL_PATH/Uninstaller/uninstaller.jar&quot;"
     description="This Removes the Model">
     
     <createForPack name="Model" />
   </shortcut>
   
</izpack:shortcuts>