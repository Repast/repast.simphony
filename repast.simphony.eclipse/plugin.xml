   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.jdt.ui.PackageExplorer?after=additions">
         <menu
               id="rs.main.menu"
               label="Repast Simphony">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="activeMenuSelection">
                  <iterate
                        ifEmpty="false">
                     <adapt
                           type="org.eclipse.core.resources.IProject">
                           
                     </adapt>
                  </iterate>
               </with>
            </visibleWhen>
            <separator
                  name="rs.natureGroup"
                  visible="false">
            </separator>
            <command
                  commandId="repast.simphony.eclipse.installer_updater"
                  label="Update model installer files"
                  style="push">
               <visibleWhen
                     checkEnabled="false">
                  <with
                        variable="activeMenuSelection">
                     <iterate
                           ifEmpty="false">
                        <adapt
                              type="org.eclipse.core.resources.IProject">
                           <test
                                 property="org.eclipse.core.resources.projectNature"
                                 value="repast.simphony.eclipse.repast_simphony_nature">
                           </test>
                        </adapt>
                     </iterate>
                  </with>
               </visibleWhen>
               
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="repast.simphony.eclipse.ide.UpdateInstallerFilesHandler"
            id="repast.simphony.eclipse.installer_updater"
            name="Repast Model Installer Updater">
      </command>
   </extension>
   
   

