   <extension
         point="org.eclipse.jdt.core.classpathVariableInitializer">
         <classpathVariableInitializer                                          
      variable="STAND_ALONE_BATCH_CLASSPATH"                                                        
      class="repast.simphony.eclipse.StandAloneBatchCPInit"/>     
